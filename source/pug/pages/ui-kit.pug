extends ../components/base/layout

block variables
  - const title = "UI-kit"

block main
  style.
    main {
      margin-top: 100px;
    }

    main > .container {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .components-backwards {
      color: #ffffff;
      display: inline-block;
    }

    .components-backwards span:first-child {
      position: relative;
      top: -3px;

      display: inline-block;
      margin-right: 15px;

      font-size: 16px;
      line-height: 24px;
      vertical-align: top;

      transform: scale(2);
    }

    .components-backwards span:last-child {
      font-size: 16px;
      line-height: 24px;
    }

    .components-backwards + h1 {
      margin-bottom: 0;
    }

    .container > section {
      padding: 80px 0 0 0;
    }

    .ui-tile {
      margin: 0 0 20px 0;
      padding: 20px 0;
      position: relative;
      color: #ffffff;
    }

    .ui-tile::before {
      content: "";
      position: absolute;
      height: 100%;
      width: 100vw;
      left: 50%;
      top: 0;
      transform: translateX(-50%);
      background-color: #2c39f2;
      z-index: -1;
    }

    .header-ui {
      background-color: #2c39f2;
      padding: 20px 0;
      position: fixed;
      width: 100%;
      z-index: 99;
      box-shadow: 0 0 3px 1px #000000;
    }

    .header-ui__nav {
      display: grid;
      align-items: center;
      grid-template-columns: max-content 1fr;
      gap: 20px 80px;
    }

    .dropdown-nav {
      margin-left: auto;
    }

  header.header-ui(data-fix-block)
    nav.header-ui__nav.container
      a.components-backwards(href="sitemap.html")
        span &larr;
        span вернуться на разводящую
      div.dropdown-nav(data-dropdown-nav, data-hash, tabindex="0")
        span.dropdown-nav__button(data-dropdown-button)
        ul.dropdown-nav__list(data-dropdown-list)
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#typography", data-dropdown-link) Typography
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#buttons", data-dropdown-link) Buttons
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#socials", data-dropdown-link) Socials
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#pagination", data-dropdown-link) Pagination
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#breadcrumbs", data-dropdown-link) Breadcrumbs
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#lists", data-dropdown-link) Lists
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#dropdown", data-dropdown-link) Dropdown
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#cards", data-dropdown-link) Cards
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#cards-hover", data-dropdown-link) Cards hover
          li.dropdown-nav__item
            a.dropdown-nav__link(href="#form-elements", data-dropdown-link) Form elements
          li.dropdown-nav__item
